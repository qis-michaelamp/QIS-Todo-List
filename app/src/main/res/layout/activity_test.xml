    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="@string/Material_Edit_Text_Title" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/title_new_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:inputType="text"
        android:maxLength="20"
        app:met_errorColor="@color/colorLightRed" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title_new_task"
        android:layout_below="@id/title_new_task"
        android:layout_marginTop="10dp"
        android:text="@string/Material_Edit_Text_Description" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/description_new_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/description"
        android:layout_below="@id/description"
        android:inputType="textMultiLine"
        android:maxLength="200"
        app:met_errorColor="@color/colorLightRed" />

    <TextView
        android:id="@+id/priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/description_new_task"
        android:layout_below="@id/description_new_task"
        android:layout_marginTop="10dp"
        android:text="@string/Material_Edit_Text_Priority" />

    <Spinner
        android:id="@+id/priority_new_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/priority"
        android:layout_below="@id/priority"
        android:layout_marginTop="10dp"
        android:entries="@array/priority" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/priority_new_spinner"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/priority_new_spinner"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button

            android:id="@+id/btn_cancel_new_task"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_left_arrow"
            android:text="Cancel" />

        <Button
            android:id="@+id/btn_save_new_task"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_checlk"
            android:text="Create Task" />

    </LinearLayout>
</RelativeLayout>
