<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/PK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/titleRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/PK"
        android:layout_below="@id/PK"
        android:text="@string/Material_Edit_Text_Title"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/descriptionRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/titleRead"
        android:layout_below="@+id/titleRead"
        android:layout_marginTop="5dp"
        android:text="@string/Material_Edit_Text_Description"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/priorityRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/descriptionRead"
        android:layout_below="@+id/descriptionRead"
        android:layout_marginTop="10dp"
        android:text="@string/Material_Edit_Text_Priority"
        android:textSize="10sp" />

    <Button
        android:id="@+id/button_back_task"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/priorityRead"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/ic_left_arrow"
        android:text="Back" />

</RelativeLayout>
